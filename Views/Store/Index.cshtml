@model IEnumerable<ApplicationDev.Models.Store>
@{
    if (!Model.Any())
    {
        <p>
            <a asp-action="CreateStore">Create New</a>
        </p>
    }
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreateAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeleteAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeleteAt)
            </td>
            <td>
                @* <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> | *@
                <a asp-controller="Product" asp-action="ProductInStore" asp-route-id="@item.Id" class="btn btn-success text-white" style="cursor:pointer">
                                                            <i class="fa fa-book" aria-hidden="true"></i> Product
                                                        </a>
                <a asp-controller="Order" asp-action="OrderManager" asp-route-id="@item.Id" class="btn btn-success text-white" style="cursor:pointer">
                                                                                            <i class="fa fa-book" aria-hidden="true"></i> Order Manager
                                                                                        </a>
            </td>
        </tr>
    }
    </tbody>
</table>
